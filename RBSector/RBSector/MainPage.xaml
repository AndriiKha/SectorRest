<Page
    x:Class="RBSector.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RBSector"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="stackPanelTab" Orientation="Horizontal" Grid.ColumnSpan="2" Background="OrangeRed"  BorderBrush="Black" Margin="0,0,0,-10">
            <Button Name="btn_AddNewTab" Content="Add" Margin="5,5,5,-10" Height="50" Width="100" BorderThickness="2" BorderBrush="Black" Background="Black" Foreground="OrangeRed"/>
        </StackPanel>
        <RelativePanel Name="relativePanelTab"  Grid.Column="2" Background="OrangeRed">
            <Button Name="btn_editMode" Content="Save" Margin="5,5,5,0" Height="50" Width="100"  Background="Black" Foreground="OrangeRed" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True"/>
        </RelativePanel>

        <RelativePanel Name="relativePanelCategory" Grid.Row="1">
            <StackPanel Name="stackPanelCategory1" Orientation="Vertical" Background="Gray" Margin="5,5,5,5" RelativePanel.AlignTopWithPanel="True">
                <TextBlock Name="txb_nameCategory" Text="Name Category" Margin="5,5,5,5" TextAlignment="Center" FontSize="20"/>
                <Button Name="btn_Up" Content="UP" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" BorderBrush="Black" BorderThickness="5"/>
            </StackPanel>
            <StackPanel BorderBrush="OrangeRed" BorderThickness="5" Name="stackPanelCategory2" Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" RelativePanel.Above="stackPanelCategory3" RelativePanel.Below="stackPanelCategory1">
                <TextBlock Width="250"/>
            </StackPanel>
            <StackPanel Name="stackPanelCategory3" Orientation="Vertical" Background="Gray" Margin="5,5,5,5" RelativePanel.AlignBottomWithPanel="True">
                <Button Name="btn_NewCategory" Content="New Category" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" Width="200" Height="50" BorderBrush="Black" BorderThickness="5"/>
                <Button Name="btn_Down" Content="DOWN" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" BorderBrush="Black" BorderThickness="5"/>
            </StackPanel>
        </RelativePanel>

        <RelativePanel Name="relativePanelProducts" Grid.Column="1" Grid.Row="1">
            <StackPanel Background="OrangeRed" 
                        BorderBrush="Black" 
                        BorderThickness="5" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        RelativePanel.AlignTopWithPanel="True" 
                        RelativePanel.AlignLeftWithPanel="True" 
                        RelativePanel.AlignRightWithPanel="True">
                <TextBlock Name="txb_nameProbuct" Text="Name Product" TextAlignment="Center" FontSize="20"/>
            </StackPanel>
            <StackPanel Background="Gray" 
                        BorderBrush="Black" 
                        BorderThickness="5" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        RelativePanel.AlignBottomWithPanel="True" 
                        RelativePanel.AlignLeftWithPanel="True" 
                        RelativePanel.AlignRightWithPanel="True" Orientation="Horizontal">
                <RelativePanel>
                    <Button Name="btn_UpProducts" Content="Up" BorderThickness="2" BorderBrush="Black" Margin="5,5,5,5" Width="75" RelativePanel.AlignHorizontalCenterWithPanel="True"/>
                    <Button Name="btn_DownProducts" Content="Down" BorderThickness="2" BorderBrush="Black" Margin="5,5,5,5" Width="75" RelativePanel.RightOf="btn_UpProducts"/>
                </RelativePanel>
            </StackPanel>
        </RelativePanel>

    </Grid>
</Page>
